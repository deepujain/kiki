{
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "module": "esnext",
    "target": "es2021",
    "rootDir": "..",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "./migrate.ts",
    "../src/lib/**/*"
  ]
}
