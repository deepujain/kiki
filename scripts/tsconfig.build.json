{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./*.ts",
    "../src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../node_modules"
  ]
}
